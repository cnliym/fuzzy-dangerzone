<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaxiPsgerActivity" >

    <TextView
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bg"
        android:ems="10"
        android:gravity="center"
        android:text="@string/login_title"
        android:textSize="22dp" >
    </TextView>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="26dp" >

        <EditText
            android:id="@+id/number_prefix"
            android:layout_width="64dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="9dp"
            android:ems="10"
            android:textSize="16dp" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/login_phone_number"
            android:layout_width="228dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="9dp"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@+id/number_prefix"
            android:ems="10"
            android:textSize="16dp" >

            <requestFocus />
        </EditText>
        
        <Button
            android:id="@+id/get_valid_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/number_prefix"
            android:layout_marginTop="18dp"
            android:text="Get Validate Code" />

        <EditText
            android:id="@+id/validate_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/get_valid_code"
            android:layout_toRightOf="@+id/get_valid_code"
            android:ems="10" />

        <Button
            android:id="@+id/start_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/get_valid_code"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="Start" />

</RelativeLayout>

    

</RelativeLayout>